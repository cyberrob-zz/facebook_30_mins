{
	"manifest_version": 2,
	"name": "Facebook 30 min a day",
	"version": "0.1",
	"description": "Restrict facebook usage for 30 mins a day",
	"default_locale": "en",
	"options_page": "options.html",
	"permissions": [
		"background",
		"tabs",
		"storage",
		"geolocation"
	],
	"browser_action": {
		"default_title": "How many minutes have you use facebook",
		"default_popup": "popup.html"
	},
	"author": "cyberrob",
	"background": {
		"persistent": false,
		"page": "background.html"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval';'unsafe-inline'; object-src 'self'"
}
